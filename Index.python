<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Vocalize AI</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Icons -->
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="min-h-screen bg-slate-50 text-slate-900">

<!-- NAVBAR -->
<nav class="sticky top-0 bg-white border-b px-6 h-16 flex items-center justify-between">
  <h1 class="text-2xl font-bold text-indigo-600">Vocalize<span class="font-light">AI</span></h1>
  <span id="status" class="text-sm text-slate-500">System Ready</span>
</nav>

<main class="max-w-6xl mx-auto p-6 grid grid-cols-1 lg:grid-cols-3 gap-6">

  <!-- TEXT INPUT -->
  <div class="lg:col-span-2 space-y-4">
    <textarea id="text"
      class="w-full h-72 p-6 text-lg border rounded-2xl resize-none"
      placeholder="Enter text to speak...">Greetings. I am ready to read whatever you type.</textarea>

    <div class="text-sm text-slate-400 text-right">
      <span id="charCount">0</span> chars
    </div>
  </div>

  <!-- CONTROLS -->
  <div class="space-y-4">

    <!-- VOICES -->
    <select id="voiceSelect" class="w-full p-3 border rounded-xl"></select>

    <!-- RATE -->
    <label class="block text-sm">Rate: <span id="rateVal">1</span></label>
    <input id="rate" type="range" min="0.5" max="2" step="0.1" value="1" class="w-full">

    <!-- PITCH -->
    <label class="block text-sm">Pitch: <span id="pitchVal">1</span></label>
    <input id="pitch" type="range" min="0.5" max="2" step="0.1" value="1" class="w-full">

    <!-- VOLUME -->
    <label class="block text-sm">Volume: <span id="volumeVal">100</span>%</label>
    <input id="volume" type="range" min="0" max="1" step="0.1" value="1" class="w-full">

    <!-- BUTTONS -->
    <div class="flex gap-2">
      <button id="speak" class="flex-1 bg-indigo-600 text-white py-3 rounded-xl">Speak</button>
      <button id="pause" class="bg-amber-400 text-white px-4 rounded-xl">Pause</button>
      <button id="stop" class="bg-red-500 text-white px-4 rounded-xl">Stop</button>
    </div>

    <button id="download" class="w-full border-2 border-dashed py-3 rounded-xl">
      Download Speech
    </button>

  </div>
</main>

<!-- VISUALIZER -->
<canvas id="visualizer" class="w-full h-32"></canvas>

<script>
lucide.createIcons();

/* ---------- STATE ---------- */
const synth = window.speechSynthesis;
let utterance;
let speaking = false;

/* ---------- ELEMENTS ---------- */
const textEl = document.getElementById("text");
const voiceSelect = document.getElementById("voiceSelect");
const statusEl = document.getElementById("status");

const rateEl = document.getElementById("rate");
const pitchEl = document.getElementById("pitch");
const volumeEl = document.getElementById("volume");

const rateVal = document.getElementById("rateVal");
const pitchVal = document.getElementById("pitchVal");
const volumeVal = document.getElementById("volumeVal");

const charCount = document.getElementById("charCount");

/* ---------- CHAR COUNTER ---------- */
textEl.oninput = () => {
  charCount.textContent = textEl.value.length;
};

/* ---------- LOAD VOICES ---------- */
function loadVoices() {
  const voices = synth.getVoices();
  voiceSelect.innerHTML = "";
  voices.forEach(v => {
    const option = document.createElement("option");
    option.value = v.name;
    option.textContent = `${v.name} (${v.lang})`;
    voiceSelect.appendChild(option);
  });
}
loadVoices();
synth.onvoiceschanged = loadVoices;

/* ---------- SPEAK ---------- */
document.getElementById("speak").onclick = () => {
  if (synth.speaking) synth.cancel();

  utterance = new SpeechSynthesisUtterance(textEl.value);
  const voices = synth.getVoices();
  utterance.voice = voices.find(v => v.name === voiceSelect.value);

  utterance.rate = rateEl.value;
  utterance.pitch = pitchEl.value;
  utterance.volume = volumeEl.value;

  utterance.onstart = () => {
    speaking = true;
    statusEl.textContent = "Speaking...";
  };

  utterance.onend = () => {
    speaking = false;
    statusEl.textContent = "System Ready";
  };

  synth.speak(utterance);
};

/* ---------- PAUSE ---------- */
document.getElementById("pause").onclick = () => {
  if (synth.speaking) synth.pause();
};

/* ---------- STOP ---------- */
document.getElementById("stop").onclick = () => {
  synth.cancel();
  speaking = false;
  statusEl.textContent = "Stopped";
};

/* ---------- SLIDER LABELS ---------- */
rateEl.oninput = () => rateVal.textContent = rateEl.value;
pitchEl.oninput = () => pitchVal.textContent = pitchEl.value;
volumeEl.oninput = () => volumeVal.textContent = Math.round(volumeEl.value * 100);

/* ---------- AUDIO VISUALIZER ---------- */
const canvas = document.getElementById("visualizer");
const ctx = canvas.getContext("2d");

function resizeCanvas() {
  canvas.width = canvas.offsetWidth;
  canvas.height = canvas.offsetHeight;
}
resizeCanvas();
window.onresize = resizeCanvas;

let t = 0;
function animate() {
  ctx.clearRect(0,0,canvas.width,canvas.height);
  ctx.beginPath();
  ctx.strokeStyle = "#6366f1";
  ctx.lineWidth = 3;

  for (let x = 0; x < canvas.width; x++) {
    const y = canvas.height / 2 +
      Math.sin(x * 0.02 + t) * (speaking ? 25 : 3);
    ctx.lineTo(x, y);
  }

  ctx.stroke();
  t += 0.1;
  requestAnimationFrame(animate);
}
animate();
</script>

</body>
</html>
